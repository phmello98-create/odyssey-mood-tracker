{
    "hosting": {
        "public": "web",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ]
    },
    "functions": {
        "source": "functions",
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ],
        "codebase": "odyssey-bots",
        "runtime": "nodejs20"
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8080
        },
        "ui": {
            "enabled": true,
            "port": 4000
        },
        "singleProjectMode": true
    }
}